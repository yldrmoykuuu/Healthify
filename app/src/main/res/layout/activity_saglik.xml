<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:orientation="vertical"
        android:spacing="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAÄžLIK TAKÄ°P"
            android:textAlignment="center"
            android:textColor="@color/colorBackground"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24sp"

            android:textStyle="bold"
            app:strokeColor="#3F51B5"
            app:strokeWidth="2dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDailySummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="#3F51B5"
            app:strokeWidth="2dp"

            />

        <!-- VÃ¼cut YaÄŸ OranÄ± Takibi -->

        <!-- Su Takibi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:backgroundTint="#3F51B5"
android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Su TÃ¼ketimi"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:importantForAccessibility="no"
                    android:scrollbars="none">

                    <!-- ðŸ‘‡ TÃ¼m ImageView'leri buraya koyacaÄŸÄ±z -->
                    <LinearLayout
                        android:id="@+id/waterContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- ImageView'ler -->
                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img8"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img9"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                        <ImageView
                            android:id="@+id/img10"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/su" />

                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tvWaterValue"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="0 Litre"
                        android:textColor="#3F51B5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWaterGoal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Ã–nerilen 2 Litre"
                        android:textAlignment="textEnd"
                        android:textColor="#3F51B5"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnKaydetSaglik"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#3F51B5"
                    android:text="Kaydet"
                    android:textColor="@color/colorBackground"
                    android:textColorLink="@color/colorBackground" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Uyku Takibi -->

        <!-- HatÄ±rlatma BÃ¶lÃ¼mÃ¼ CardView ile -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:strokeColor="#883F51B5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:backgroundTint="#3F51B5"
                android:gravity="center"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBarSleep"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:max="12"
                    android:progress="0" />

                <TextView
                    android:id="@+id/tvSleepHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uyku SÃ¼resi: 0 saat"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnKaydetUyku"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:backgroundTint="#3F51B5"
                    android:text="Kaydet"
                    android:textColor="#FFFFFF" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardKiloDegisimi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:layout_below="@id/llExtraCards"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgKiloDegisimi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Kilo DeÄŸiÅŸimi Ä°konu"
                    android:src="@drawable/diagram" />

                <TextView
                    android:id="@+id/tvSaglikDegisimi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AylÄ±k Uyku ve Su Verilerini GÃ¶rÃ¼ntÃ¼le"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>
</ScrollView>
